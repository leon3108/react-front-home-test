{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/public/*": ["public/*"],
      "@/ingredients/*": ["src/app/Ingredients/*"],
      "@/recipeList/*": ["src/app/RecipeList/*"],
      "@/recipes/*": ["src/app/Recipes/*"],
      "@/steps/*": ["src/app/Steps/*"],
      "@/tags/*": ["src/app/Tags/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
